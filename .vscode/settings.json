{
    "files.autoSave": "afterDelay",
    "editor.fontSize": 16,
    "cSpell.diagnosticLevel": "Hint",
    "editorHint.foreground": "#f000",

    //VS Code will always use the version selected within the project for all IDE tooling
    "dart.flutterSdkPath": ".fvm/flutter_sdk",

    // Remove .fvm files from search
    "search.exclude": {
        "**/.fvm": true
    },
    // Remove from file watching
    "files.watcherExclude": {
        "**/.fvm": true
    }, 

    "workbench.colorCustomizations": {

        // will change the color of three dots to red
        "editorHint.foreground": "#f000",
      
        // will underline the entire word with dots in your chosen color
        "editorHint.border": "#00ff66"
        
    },

    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "cSpell.words": [
        "การจัดส่งแบบอื"
    ],
    "editor.rulers": [
    {"column":   0, "color": "#5a5a5a80"}, // left boundary is 50% opaque
    {"column":   2, "color": "#5a5a5a20"}, // tab stops are 12.5% opaque
    {"column":   4, "color": "#5a5a5a20"},
    {"column":   6, "color": "#5a5a5a20"},
    {"column":   8, "color": "#5a5a5a20"},
    {"column":  10, "color": "#5a5a5a20"},
    {"column":  40, "color": "#5a5a5a20"}, // center line
    {"column":  79, "color": "#5a5a5a20"}, // right rule minus one
    {"column":  80, "color": "#5a5a5a20"}, // right rule
    {"column": 120, "color": "#5a5a5a40"}  // extra right rule
],   
}